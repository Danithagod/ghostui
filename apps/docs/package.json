{
  "name": "docs",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint",
    "audit:docs": "node scripts/audit-docs.js",
    "audit": "node --import tsx scripts/audit-cli.ts",
    "audit:ci": "node --import tsx scripts/audit-cli.ts --report --format=json",
    "audit:report": "node --import tsx scripts/audit-cli.ts --report --format=markdown",
    "audit:html": "node --import tsx scripts/audit-cli.ts --report --format=html",
    "audit:check": "node --import tsx scripts/check-compliance.ts",
    "audit:fix": "node --import tsx scripts/audit-cli.ts --fix",
    "audit:fix:dry": "node --import tsx scripts/audit-cli.ts --fix --dry-run",
    "audit:component": "node --import tsx scripts/audit-cli.ts --component",
    "docs:new": "node --import tsx scripts/create-component-page.ts",
    "docs:validate": "npm run audit:check && npm run test",
    "docs:fix": "npm run audit:fix && npm run lint --fix",
    "hooks:install": "git config core.hooksPath .githooks && chmod +x .githooks/pre-commit",
    "test": "vitest --run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@emotion/is-prop-valid": "^1.4.0",
    "clsx": "^2.1.1",
    "framer-motion": "^12.23.24",
    "ghostui-react": "*",
    "lucide-react": "^0.554.0",
    "next": "16.0.3",
    "next-mdx-remote": "^5.0.0",
    "prismjs": "^1.30.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "shiki": "^3.15.0",
    "tailwind-merge": "^3.4.0"
  },
  "devDependencies": {
    "@babel/generator": "^7.28.5",
    "@babel/parser": "^7.28.5",
    "@babel/traverse": "^7.28.5",
    "@babel/types": "^7.28.5",
    "@tailwindcss/postcss": "^4",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/babel__generator": "^7.27.0",
    "@types/babel__traverse": "^7.28.0",
    "@types/node": "^20",
    "@types/prismjs": "^1.26.5",
    "@types/react": "^18.3.27",
    "@types/react-dom": "^18.3.7",
    "@vitejs/plugin-react": "^5.1.1",
    "baseline-browser-mapping": "^2.8.32",
    "eslint": "^9",
    "eslint-config-next": "16.0.3",
    "fast-check": "^4.3.0",
    "jsdom": "^27.2.0",
    "tailwindcss": "^4",
    "tsx": "^4.21.0",
    "typescript": "^5",
    "vitest": "^4.0.13"
  }
}
